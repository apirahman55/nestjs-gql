generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id     Int    @id @default(autoincrement())
  cover String
  title  String
  author String
  description String
  isbn String
  link String
  publishedAt DateTime
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}
